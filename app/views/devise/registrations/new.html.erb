<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
<h2>サインアップ</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, class: "form_control", placeholder:"メールアドレス"%>
  </div>
<br>
  <div class="field">
    <%= f.password_field :password, autocomplete: "off", class: "form_control", placeholder:"パスワード" %>
  </div>
<br>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form_control", placeholder:"パスワード再入力" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "アカウント作成", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
</div>
</div>


<%= render "devise/shared/links" %>
