<div class ="container">
<div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

<p id="notice"><%= notice %></p>

<h1>お問い合わせ</h1>

<%= form_for(@contacts, url:confirm_contacts_path) do |f| %>
<% if @contacts.errors.any? %>
<div id = "error_explanation">
    <h2><%= @contacts.errors.count %>件のエラーが発生しています</h2>

<ul>
    <% @contacts.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
    <% end %>

<%= f.label :名前 %>
<%= f.text_field :name,class: 'form-control' %>
<br>
<br>
<%= f.label :email %>
<%= f.text_field :email,class: 'form-control' %>
<br>
<br>
<%= f.label :内容 %>
<%= f.text_field :contents,class: 'form-control' %>
<br>
<br>
<%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>
</div>
</div>