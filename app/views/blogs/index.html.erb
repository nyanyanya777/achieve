
<div class ="wrapper col-md-8 col-md-offset-2 col-sm-10">
<p><%= notice %></p>
<h1>ブログ一覧</h1>
<%= link_to "ブログを作成する", new_blog_path, class:'btn btn-default' %>
<% @blog.each do |blog| %>
<div class ="row">
  <%= profile_img(blog.user) %>
   <%= link_to blog_path(blog) do %>
  <h4><strong><%= blog.title %></strong></h4>
 <% end %>
  <p><%= blog.content %></p>
ユーザー名:<%= blog.user.name %>
<br>
<% if blog.user.id == current_user.id %>
<%= link_to "ブログを編集する", edit_blog_path(blog.id), class:'btn btn-default btn-sm btn-success' %>
<%= link_to "ブログを削除する", blog_path(blog.id),method: :delete,data: { confirm: '本当に編集していいですか？' }, class: 'btn btn-default btn-sm btn btn-danger' %>
<% end %>
</div>
<% end %>
</div>
<div id="index-top-btn" class= "index-top-btn">
  <p><a class="move-index-top" id="move-index-top">▲</a></p>
</div>
