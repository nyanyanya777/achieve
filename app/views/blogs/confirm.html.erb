<div class = "container">
<div class= "wrapper col-md-8 col-md-offset-2 col-sm-10">

<h3>以下の内容で送信します</h3>

<%= form_for(@blog) do |f| %>
<%= f.hidden_field :title %>
<%= f.hidden_field :content %>

<p>タイトル:<%= @blog.title %></p>
<p>本文:<%= @blog.content %></p>
<%= f.submit"投稿する", class:'btn btn-primary btn-block' %>
<%end%>

<%= form_for(@blog, url: new_blog_path, method:'get') do |f| %>
<%= f.hidden_field :title, class:'form-control' %>
<%= f.hidden_field :content, class:'form-control' %>
<%= f.submit "もどる",name: 'back' ,class:'btn btn-primary btn-block'%>
<% end %>
</div>
</div>